@model IEnumerable<plv.Models.Downloads>

@{
    ViewData["Title"] = "DownloadHistory";
}


<div class="plog col-md-6">
    <h1  class="display-4 text-center emboss">DownloadHistory</h1>
    <div class="table-style">
        <table id="downloads-table">
            <thead>
                <tr>
                    <th>Downloaded by</th>
                    <th>Section</th>
                    <th>File</th>
                    <th>Download time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <th>@log.UserName</th>
                        <th>@log.SectionName</th>
                        <th>@log.FileName</th>
                        <th>@log.DownloadTime</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

    @section Scripts
{
        <script>
            $(document).ready(function () {
                $("#downloads-table").DataTable();
            })
        </script>
    }
