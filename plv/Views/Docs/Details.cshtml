@model plv.ViewModels.DocumentDetailsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Document.FilePath</h4>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="/Docs/Download/@Model.Document.Section/@Model.Document.FilePath" class="card-link">Download</a>
        @if (Model.IsOwnedByCurrentUser)
        {
            <a href="/Docs/Edit/@Model.Document.Id" class="card-link">Edit</a>
        }
    </div>
</div>


