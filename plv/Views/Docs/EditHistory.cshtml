@model IEnumerable<plv.Models.DocEdits>

@{
    ViewData["Title"] = "EditHistory";
}


<div class="plog col-md-10">
    <h1  class="display-4 text-center emboss">File Edit History</h1>
    <div class="table-style">
        <table id="edit-history">
            <thead>
                <tr>
                    <th>Edytował</th>
                    <th>Plik</th>
                    <th>Nowa Data</th>
                    <th>Poprzedni User</th>
                    <th>Nowy User</th>
                    <th>Poprzedni odbiorca</th>
                    <th>Nowy odbiorca</th>
                    <th>Poprzedni nadawca</th>
                    <th>Nowy nadawca</th>
                    <th>Czas edycji</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var edit in Model)
                {
                <tr>
                    <td>@edit.EditedBy</td>
                    <td>@edit.DocumentName</td>
                    @if (edit.NewDateIssued != DateTime.MinValue)
                    {
                        <td>@edit.NewDateIssued</td>
                    }
                    else
                    {
                        <td class="crossed"></td>
                    }



                    @if (!String.IsNullOrWhiteSpace(edit.NewUser))
                    {
                        <td>@edit.PreviousUser</td>
                        <td>@edit.NewUser</td>
                    }
                    else
                    {
                        <td class="crossed"></td>
                        <td class="crossed"></td>
                    }

                    @if (!String.IsNullOrWhiteSpace(edit.NewReceiver))
                    {
                        <td>@edit.PreviousReceiver</td>
                        <td>@edit.NewReceiver</td>
                    }
                    else
                    {
                        <td class="crossed"></td>
                        <td class="crossed"></td>
                    }

                    @if (!String.IsNullOrWhiteSpace(edit.NewSender))
                    {
                        <td>@edit.PreviousSender</td>
                        <td>@edit.NewSender</td>
                    }
                    else
                    {
                        <td class="crossed"></td>
                        <td class="crossed"></td>
                    }
                    <td>@edit.EditTime</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
                $(document).ready(function () {
                    $('#edit-history').DataTable();
                });
    </script>
}
