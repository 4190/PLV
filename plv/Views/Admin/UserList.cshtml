@model IEnumerable<plv.Models.ApplicationUser>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="plog col-md-6">
    <h1 class="display-4 text-center emboss">Lista użytkowników</h1>
    <div class="table-style">
        <table id="users">
            <thead>
                <tr>
                    <th scope="col"><p>Nazwa urzytkownika</p></th>
                    <th scope="col"><p>Email</p></th>
                    <th scope="col"><p>Numer tel.</p></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                { 
                <tr onclick="window.location.href='/Admin/ManageUser/@user.Id'">
                    <td>
                        <p>
                            @user.UserName
                        </p>
                    </td>
                    <td>
                        <p>@user.Email</p>
                    </td>
                    <td class="col2">
                        <p>@user.PhoneNumber</p>
                    </td>   
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#users').DataTable();
        });
    </script>
}


